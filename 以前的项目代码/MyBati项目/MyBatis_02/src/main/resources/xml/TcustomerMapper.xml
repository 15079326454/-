<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hgkj.model.dao.TcustomerMapper">
  <resultMap id="TcustomerMap" type="Tcustomer">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="age" jdbcType="VARCHAR" property="age" />
    <result column="tel" jdbcType="DATE" property="tel" />
    <!--一对多；一指定是客户表，多指的是订单表-->
    <collection property="orders" ofType="Orders" select="selectOderBy" column="id"/>
  </resultMap>
  <!--一对多，对应的select-->
  <select id="selectOderBy" parameterType="java.lang.Integer" resultType="Orders" >
    select id, order_number, order_price, customer_id from t_order where customer_id=#{t_customer.id}
  </select>
  <sql id="Base_Column_List">
    id, name, age, tel
  </sql>
  <!--根据Id查询-->
  <select id="selectById" parameterType="java.lang.Integer" resultMap="TcustomerMap">
    select 
    <include refid="Base_Column_List" />
    from t_customer
    where id = #{id,jdbcType=INTEGER}
  </select>
  <!--删除-->
  <delete id="deleteCmd" parameterType="java.lang.Integer">
    delete from t_customer
    where id = #{id}
  </delete>
  <!--添加-->
  <insert id="insertCmd" parameterType="Tcustomer" useGeneratedKeys="true" keyProperty="id">
    insert into t_customer (id, name, age, 
      tel)
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{age,jdbcType=VARCHAR}, 
      #{tel,jdbcType=DATE})
  </insert>
  <!--查询所有-->
 <select id="selecteAllCmd" resultMap="TcustomerMap">
   select
   <include refid="Base_Column_List" />
   from t_customer
 </select>
  <!--修改-->
  <update id="updateCmd" parameterType="Tcustomer">
    update t_customer set name=#{name},age=#{age},tel=#{tel} where id=#{id}
  </update>
  <!--模糊查询-->
<select id="selectLike" resultMap="TcustomerMap" parameterType="java.lang.String">
  select
  <include refid="Base_Column_List" />
  from t_customer where name like "%"#{name}"%"
</select>
  <!--分页查询-->
  <select id="selectFenYe" resultMap="TcustomerMap">
    select <include refid="Base_Column_List" />
    from t_customer limit #{index},#{pageSize}
  </select>
</mapper>